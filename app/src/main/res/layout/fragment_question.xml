<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp">
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="警用问卷"
            android:layout_centerVertical="true"
            android:padding="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="20dp">
        <TextView
            android:id="@+id/basic_query_cn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />
        <TextView
            android:id="@+id/tv_question_cn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you have a passport or any other ID?"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:layout_below="@+id/basic_query_cn"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_below="@+id/tv_question_cn"
            android:text="\n告知/Informing:\n"
            android:visibility="gone"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/basic_query_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:visibility="gone"
            android:gravity="left"
            android:layout_below="@+id/header"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />
        <TextView
            android:id="@+id/tv_question_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_below="@+id/basic_query_en"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_quest_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="答案"
            android:textSize="20sp"
            />
       <RadioGroup
           android:id="@+id/answer_radio_group"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/tv_quest_desc"
           android:layout_centerVertical="true"
           android:layout_marginLeft="25dp"
           android:orientation="horizontal"
           >
           <RadioButton
               android:id="@+id/rd_yes"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:buttonTint="@color/header"
               android:text="YES   "
               android:textColor="#A8A8A8"
               />
           <RadioButton
               android:id="@+id/rd_no"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:buttonTint="@color/header"
               android:textColor="#A8A8A8"
               android:text="NO"
               />


       </RadioGroup>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/rl_l6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="3"
        >
        <!--<Button-->
            <!--android:id="@+id/btn_zoom"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:text="全屏"-->
            <!--android:drawableLeft="@drawable/icon_zoom"-->
            <!--android:drawablePadding="5dp"-->
            <!--android:paddingLeft="20dp"-->
            <!--android:stateListAnimator="@null"-->
            <!--android:gravity="center_vertical|left"-->
            <!--android:textColor="@color/White"-->
            <!--android:textSize="20sp"-->
            <!--android:layout_toLeftOf="@+id/btn_share_intent"-->
            <!--android:background="@drawable/buttoncustom">-->
        <!--</Button>-->
        <Button
            android:id="@+id/btn_share_intent"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:text="分享"
            android:drawableLeft="@drawable/icon_share"
            android:background="@drawable/buttoncustom"
            android:layout_centerHorizontal="true"
            android:stateListAnimator="@null"
            android:textColor="@color/White"
            android:drawablePadding="5dp"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="60dp"
            android:layout_centerVertical="true" >
        </Button>
        <Button
            android:id="@+id/btn_play_audio"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:text=""
            android:gravity="center_vertical|left"
            android:drawableLeft="@drawable/button_broadcast"
            android:stateListAnimator="@null"
            android:paddingLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/White"
            android:drawablePadding="5dp"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/btn_share_intent"
            android:background="@drawable/buttoncustom">
        </Button>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/next"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/buttoncustom"
            android:layout_centerInParent="true"
            android:text="下一步"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>
</ScrollView>